# BrokerAnalysis Platform Environment Variables

# ==============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ==============================================
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Example:
# VITE_SUPABASE_URL=https://your-project-id.supabase.co
# VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Optional: Supabase Service Role Key (for admin operations)
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ==============================================
# AI CONTENT GENERATOR SYSTEM
# ==============================================

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional: Override default AI configuration
# AI_CONTENT_GENERATOR_CONFIG={"contentGeneration":{"maxRetries":5}}

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Development Settings
VITE_APP_ENV=development
VITE_ENABLE_DEVTOOLS=true

# Production Settings (uncomment for production)
# VITE_APP_ENV=production
# VITE_ENABLE_DEVTOOLS=false

# API Configuration
VITE_API_BASE_URL=http://localhost:3001

# ==============================================
# SECURITY & SPAM PROTECTION
# ==============================================

# Cloudflare Turnstile Configuration
# Get your site key from: https://dash.cloudflare.com/
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key_here
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here

# Example:
# NEXT_PUBLIC_TURNSTILE_SITE_KEY=0x4AAAAAAABkMYinukE_NVJb
# TURNSTILE_SECRET_KEY=0x4AAAAAAABkMYinukE_NVJb_secret

# ==============================================
# FEATURE FLAGS
# ==============================================
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_RLS=true
VITE_ENABLE_AUTH=true

# ==============================================
# STORAGE & ASSETS
# ==============================================
VITE_SUPABASE_STORAGE_BUCKET=broker-assets

# ==============================================
# INTERNATIONALIZATION
# ==============================================
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr,de,it,pt,ja,zh

# ==============================================
# RATE LIMITING
# ==============================================
VITE_REVIEW_RATE_LIMIT=3
VITE_REVIEW_RATE_WINDOW=24

# ==============================================
# PERFORMANCE SETTINGS
# ==============================================
VITE_QUERY_STALE_TIME=300000
VITE_QUERY_CACHE_TIME=600000

# ==============================================
# ANALYTICS & MONITORING (OPTIONAL)
# ==============================================
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VITE_HOTJAR_ID=your_hotjar_id
# VITE_SENTRY_DSN=your_sentry_dsn
# VITE_LOGROCKET_APP_ID=your_logrocket_app_id

# ==============================================
# LOGGING
# ==============================================
VITE_LOG_LEVEL=info
VITE_ENABLE_ERROR_REPORTING=false

# ==============================================
# LEGACY DATABASE (if using external database)
# ==============================================
# DATABASE_URL=your_database_url_here