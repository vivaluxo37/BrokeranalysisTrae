{
  "mcpServers": {
    "puppeteer": {
      "name": "Puppeteer Web Automation",
      "description": "Web automation server using Puppeteer for browser control, screenshots, and content extraction",
      "command": "node",
      "args": ["./src/puppeteer/index.js"],
      "cwd": "./mcp-servers",
      "env": {},
      "capabilities": [
        "browser_automation",
        "web_scraping",
        "screenshot_capture",
        "content_extraction",
        "user_interaction"
      ],
      "tools": [
        "puppeteer_navigate",
        "puppeteer_screenshot",
        "puppeteer_click",
        "puppeteer_fill",
        "puppeteer_select",
        "puppeteer_hover",
        "puppeteer_evaluate"
      ]
    },
    "firecrawl": {
      "name": "Firecrawl Web Scraping",
      "description": "Advanced web scraping and content extraction using Firecrawl API",
      "command": "node",
      "args": ["./src/firecrawl/index.js"],
      "cwd": "./mcp-servers",
      "env": {},
      "capabilities": [
        "web_scraping",
        "content_extraction",
        "website_crawling",
        "web_search",
        "url_mapping"
      ],
      "tools": [
        "firecrawl_scrape",
        "firecrawl_crawl",
        "firecrawl_search",
        "firecrawl_map"
      ]
    },
    "filesystem": {
      "name": "Filesystem Operations",
      "description": "File system operations server",
      "command": "node",
      "args": ["./src/filesystem/index.js"],
      "cwd": "./mcp-servers",
      "env": {},
      "capabilities": [
        "file_operations",
        "directory_management"
      ]
    },
    "supabase": {
      "name": "Supabase Database Operations",
      "description": "Supabase database and API operations server",
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--read-only",
        "--project-ref=diykotyhjwcwdscozltq"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "sbp_8087b02f65063c3d389df0c661d7439f1c000375"
      },
      "capabilities": [
        "database_operations",
        "api_access",
        "real_time_subscriptions"
      ]
    }
  },
  "settings": {
    "logLevel": "info",
    "timeout": 30000,
    "retryAttempts": 3,
    "enableLogging": true
  }
}